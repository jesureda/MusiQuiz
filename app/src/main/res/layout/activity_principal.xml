<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <fragment
            android:id="@+id/frLogo"
            android:name="com.example.jsureda.musiquiz.FragLogo"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="50dp" />

        <Button
            android:id="@+id/btnJugar"
            style="@style/Boton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="158dp"
            android:text="@string/labelJugar" />

        <View
            style="@style/Separador"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="57dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnSalir"
                style="@style/BotonesConImagen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_lock_power_off" />

            <ImageButton
                android:id="@+id/imgBtnRanking"
                style="@style/BotonesConImagen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <ImageButton
                android:id="@+id/imgBtnAjustes"
                style="@style/BotonesConImagen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_set_as" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>